{
    "seed": 442,
    "data": {
        "path": {
            "raw": "data/raw/50k",
            "processed": "data/processed/50k"
        },
        "neg_to_pos_ratio": 0.5
    },
    "model": {
        "type": "mf",
        "latent_dim": 32,
        "l2_reg": 5e-3,
        "unit_norm_emb": false,
        "use_bias": false,
        "act": "sigmoid"
    },
    "trainer": {
        "num_epochs": 20,
        "batch_size": 2560,
        "loss_fn": {
            "type": "wbce"
        },
        "optimizer": {
            "type": "sgd",
            "params": {
                "learning_rate": 0.1
            }
        },
        "callbacks": [
            {
                "type": "early_stopping",
                "params": {
                    "monitor": "val_binary_accuracy",
                    "mode": "max",
                    "patience": 5,
                    "min_delta": 1e-3,
                    "restore_best_weights": true
                }
            },
            {
                "type": "model_checkpoint",
                "params": {
                    "monitor": "val_binary_accuracy",
                    "mode": "max",
                    "save_weights_only": true,
                    "save_best_only": true
                }
            },
            {
                "type": "logging"
            }
        ]
    }
}